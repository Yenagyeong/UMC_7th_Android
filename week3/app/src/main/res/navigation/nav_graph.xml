<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="dduw.com.mobile.flo_clone.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <!-- Action to navigate to AlbumFragment -->
        <action
            android:id="@+id/action_homeFragment_to_albumFragment"
            app:destination="@id/albumFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumFragment"
        android:name="dduw.com.mobile.flo_clone.AlbumFragment"
        android:label="AlbumFragment"
        tools:layout="@layout/activity_album" />

</navigation>